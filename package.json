{
    "name": "mai",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/0xfinder/mai.git",
    "author": "finder <0xfinder@protonmail.com>",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon dist/index.js",
        "start": "node dist/index.js",
        "build": "tsc",
        "postinstall": "tsc",
        "watch-ts": "tsc -w",
        "eslint:lint": "eslint src/**/*.{ts}",
        "eslint:format": "eslint --fix src/**/*.{ts}",
        "prettier:format": "prettier -c ./.prettierrc --write src/**/*.{ts,js,json,css,sass,scss,less,html,pug,md}",
        "test": "jest"
    },
    "dependencies": {
        "@alch/alchemy-web3": "^1.3.0",
        "axios": "^0.26.1",
        "discord-api-types": "^0.30.0",
        "discord.js": "^13.6.0",
        "dotenv": "^16.0.0",
        "eslint-plugin-prettier": "^4.0.0",
        "ts-node": "^10.7.0",
        "tslog": "^3.3.3",
        "typescript": "^4.6.3",
        "web3-utils": "^1.7.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-angular": "^16.2.3",
        "@types/jest": "^27.4.1",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard": "^16.0.3",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "lint-staged": ">=10",
        "nodemon": "^2.0.15",
        "prettier": "^2.6.1"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix"
        ],
        "*.{json,ts}": [
            "prettier --write"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-angular"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "chore",
                    "build",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test",
                    "types",
                    "wip"
                ]
            ]
        }
    }
}
